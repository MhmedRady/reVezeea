@model AdminDTO
@{
    ViewBag.title = "Log In";
    Layout = "~/Views/Shared/Layout/_Layout_Login.cshtml";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/admin/assets/assets/css/style.css">
}
    <!--------------------------------------------------------------------------------------------------------->

        <form class="form-horizontal" asp-controller="adminAuth" asp-action="login" novalidate>
            <fieldset class="form-group position-relative has-icon-left">
                <input type="text" asp-for="email" class="form-control input-lg" id="email" placeholder="Your Username"
                       tabindex="1" required>
                <div class="form-control-position">
                    <i class="ft-user"></i>
                </div>
                <div class="invalid-feedback help-block font-small-3 d-block">
                    @TempData["email"]
                </div>
            </fieldset>
            <fieldset class="form-group position-relative has-icon-left">
                <input type="password" asp-for="password" class="form-control input-lg" id="password" placeholder="Enter Password"
                       tabindex="2" required>
                <div class="form-control-position">
                    <i class="la la-key"></i>
                </div>
                <div class="invalid-feedback help-block font-small-3 d-block">
                    @TempData["password"]
                </div>
            </fieldset>
            <div class="form-group row">
                <div class="col-md-6 col-12 text-center text-md-left">
                    <fieldset>
                        <input type="checkbox" id="remember-me" class="chk-remember">
                        <label for="remember-me"> Remember Me</label>
                    </fieldset>
                </div>
                <div class="col-md-6 col-12 text-center text-md-right"><a href="recover-password.html" class="card-link">Forgot Password?</a></div>
            </div>
            <button type="submit" class="btn btn-danger btn-block btn-lg"><i class="ft-unlock"></i> Login</button>
        </form>
    
    <!--------------------------------------------------------------------------------------------------------->
@section Scripts {
    <script src="~/admin/app-assets/js/scripts/forms/form-login-register.js" type="text/javascript"></script>

}